<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.TragosDetallesFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_trago"
            android:layout_width="match_parent"
            android:layout_height="300dp"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/bu_save_trago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_save_24"/>

        <TextView
            android:id="@+id/trago_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="25sp"
            android:textStyle="bold"
            tools:text="detalles fragment"/>
        <TextView
            android:id="@+id/txt_alcohol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textStyle="italic"
            android:textSize="12sp"
            tools:text="tiene alcohol"/>
        <TextView
            android:id="@+id/trago_desc"
            android:paddingTop="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textSize="18sp"
            android:textStyle="normal"
            tools:text="Ingredientes?"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="129dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="156dp"
            android:text="volver a main">

        </Button>
    </LinearLayout>

    <!-- TODO: Update blank fragment layout -->


</FrameLayout>